# Example .env file for local development
# Copy to .env and fill in real values as needed

# Node environment
NODE_ENV=development

# Server port
PORT=4010

# PostgreSQL database URL
DATABASE_URL=postgresql://user:password@localhost:5432/clubs_db

# JWT secret (must be at least 32 characters)
JWT_SECRET=your_jwt_secret_key_32_chars_minimum

# Session secret (must be at least 32 characters)
SESSION_SECRET=your_session_secret_key_32_chars_minimum

# Redis URL (optional, for caching/sessions)
REDIS_URL=redis://localhost:6379

# Email configuration (for password reset, verification, etc.)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=your_email@example.com

# OAuth (optional, for social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# Frontend URL (for CORS, emails, etc.)
FRONTEND_URL=http://localhost:5173

# Security
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Monitoring (optional)
NEW_RELIC_LICENSE_KEY=
SENTRY_DSN=
